-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id => 'ratings_form' do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @checkedratings[rating]
  = submit_tag 'Refresh', :id => 'ratings_submit'


%table#movies
  %thead
    %tr
      %th{:class => @movi }= link_to('Movie List', {:controller => "movies", :action => "index", :id => :title}, :id=>'title_header')
      %th Rating
      %th{:class => @dati }= link_to('Release Date', {:controller => "movies", :action => "index", :id => :release_date}, :id=>'release_date_header') 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        

= link_to 'Add new movie', new_movie_path


